<!DOCTYPE html>
<html>
  <head>
    <title>MoviesApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
  </head>

  <body>
    <nav class='navbar navbar-default'>
      <div class='container'>
        <div class='navbar-header'>
          <% if user_signed_in? %>
          <button type='button' class='navbar-toggle collapsed' data-toggle='collapse' data-target='#auth-nav' aria-expanded='false'> 
            <span class='sr-only'>Toggle navigation</span> 
            <span class='icon-bar'></span> 
            <span class='icon-bar'></span> 
            <span class='icon-bar'></span>
          </button>
          <% end %>
          <%= link_to 'Movies App', root_path, class: 'navbar-brand' %>
        </div>
        <div class='navbar-collapse collapse' id='auth-nav' aria-expanded='false' style='height: 1px;'> 
        <% if user_signed_in? %>
          <p class='navbar-text navbar-right'>Welcome, <%= current_user.email %>!</p>        
          <p class='navbar-text navbar-right'><%= link_to 'Logout', destroy_user_session_path, method: :delete %></p>        
        <% end %>
        </div>
      </div>
    </nav>
    <main class='container'>
      <%= yield %>    
    </main>
  </body>
</html>
