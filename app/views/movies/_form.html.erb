<%= form_for(movie) do |f| %>
  <div class='row'>
    <div class='form-group col-md-6'>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class='form-group col-md-6'>
      <%= f.label :director %>
      <%= f.text_field :director, class: 'form-control' %>
    </div>
  </div>

  <div class='row'>
    <div class='form-group col-md-6'>
      <%= f.label :synopsis %>
      <%= f.text_field :synopsis, class: 'form-control' %>
    </div>
    <div class='form-group col-md-6'>
      <%= f.label :stock %>
      <%= f.number_field :stock, class: 'form-control' %>
    </div>
  </div>

  <div class='row'>
    <div class='form-group col-md-6'>
      <%= f.label :poster %> <br>
      <% if movie.poster.file? %>
        <%= image_tag movie.poster.url(:thumb) %>
      <% end %>      
      <%= f.file_field :poster %>
    </div>
  </div>

  <% if movie.errors.any? %>
    <div id='error_explanation' class='text-danger' role='alert'>
      <ul>
        <% movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='row'>
    <div class='actions col-md-6 col-md-offset-3'>
      <%= f.submit 'Save movie', class: 'btn btn-primary' %>
      <%= link_to 'Cancel', movies_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>