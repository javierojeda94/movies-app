<header>
  <h1>My rents</h1>
  <%= link_to 'Back', movies_path, class: 'btn btn-default' %>
</header>
<div class='row'>
  <% @rents.each do |rent| %>
    <% quantity = rent[1] %>
    <% rent = rent[0] %>
    <div class='col-xs-12 col-sm-6 col-md-3'>
      <div class='thumbnail'>
        <%= image_tag rent.poster.url(:medium) %>
        <div class='caption'>
          <h3 class='truncate'><%= link_to rent.name, rent, class: 'link-unstyled' %></h3>
          <details>
          <summary>Synopsis</summary>
          <%= rent.synopsis %>
          </details>
          <small><%= quantity %> unities rented</small> 
        </div>
      </div>
    </div>
  <% end %>
</div>

